	</head>
	<body>
<header class="navbar navbar-bright navbar-fixed-top" role="banner">
  <div class="container">
    <div class="navbar-header">
      <button class="navbar-toggle" type="button" data-toggle="collapse" data-target=".navbar-collapse">
        <span class="sr-only">Toggle navigation</span>
        <span class="icon-bar"></span>
        <span class="icon-bar"></span>
        <span class="icon-bar"></span>
      </button>
      <a href="./home" class="navbar-brand">Home</a>
    </div>
    <nav class="collapse navbar-collapse" role="navigation">
      <ul class="nav navbar-nav">
        <%for(i=0;i<nav.length;i++){%> 
        <li>
          <a href="<%=nav[i].link%>"><%=nav[i].name%></a>
        </li>
        <%}%>
        
      </ul>
     
    </nav>
  </div>
</header>

<div id="masthead">  
  <div class="container">
    <div class="row">
      <div class="col-md-7">
        <h1>Author
          <p class="lead"></p>
        </h1>
        <!-- <h1>Storystrap
          <p class="lead"></p>
        </h1> -->
      </div>
      
    </div> 
  </div><!-- /cont -->

  
</div>


<div class="container">
  <div class="row">
    
    <div class="col-md-12"> 
      
      <div class="panel">
        <div class="panel-body">
          
          
          
    <!-- Card deck1 -->
    <div class="card-deck author">


      <!-- Card 1 2 3 -->
      <div class="card mb-4">
  
      <!--Card image-->
      <div class="view overlay">
          <img class="card-img-top" src="../images/<%=author.image%>" alt="Card image cap">
          <a href="#!">
          <div class="mask rgba-white-slight"></div>
          </a>
      </div>
  
      <!--Card content-->
      <div class="card-body">
  
          <!--Title-->
          <h4 class="card-title"><center><%=author.title%></center></h4>
          <!--Text-->
          <p class="card-text text-center"><%=author.about%></p>

          <form action="/authors/edit" method="POST">
            <input type="hidden" name="id" value="<%=author._id%>">
            <button id="editbtn" type="submit" class = "btn btn-success btn-sm" style="float: right;">Edit Author</button>
            </form>

            <form action="/authors/delete" method="POST">
            <input type="hidden" name="id" value="<%=author._id%>">
            <button id="dltbtn" type="submit" class = "btn btn-danger btn-sm" style="float: right; margin-right: 25px">Delete Author</button>
            </form>

  
      </div>
  
      </div>
      <!-- Card 1 2 3 -->


  
  
</div>
<!-- Card deck1 end -->
          
          
          <!-- <a href="/" class="btn btn-primary pull-right btnNext">More <i class="glyphicon glyphicon-chevron-right"></i></a> -->
        
          
        </div>
      </div>
                                                                                       
	                                                
                                                      
   	</div><!--/col-12-->
  </div>
</div>
                                                
                                                                                

        <%for(i=0;i<nav.length;i++){%> 
        <li>
          <a href="<%=nav[i].link%>"><%=nav[i].name%></a>
        </li>
        <%}%>
        
      </ul>
     
    </nav>
  </div>
</header>

<div id="masthead">  
  <div class="container">
    <div class="row">
      <div class="col-md-7">
        <h1>Author
          <p class="lead"></p>
        </h1>
        <!-- <h1>Storystrap
          <p class="lead"></p>
        </h1> -->
      </div>
      
    </div> 
  </div><!-- /cont -->

  
</div>


<div class="container">
  <div class="row">
    
    <div class="col-md-12"> 
      
      <div class="panel">
        <div class="panel-body mainbody">
          
          <h1 class="display-2 bg-img text-white bg-overlay text-center"><%=author.title%></h1>



          <!-- Card deck1 -->
          <div class="card-deck author">
      
      
                  <!-- Card 1 2 3 -->
                  <div class="card mb-4">
              
                  <!--Card image-->
                  <div class="view overlay ">
                      <center><img class="card-img-top img-circle mx-auto d-block" 
                      src="/images/<%=author.image%>" style="width:100px;height:100px" alt="Card image cap"></center>
                      <a href="#!">
                      <div class="mask rgba-white-slight"></div>
                      </a>
                  </div>
                 
                  <!--Card content-->
                  <div class="card-body">
              
                      <!--Title-->
                      <!-- <h4 class="card-title"><center><%=author.title%></center></h4> -->
                      <!--Text-->
                      <p class="card-text text-center"><%=author.about%></p>
                      <% if(user) { %>
                        
                      <form action="/authors/edit" method="POST">
                        <input type="hidden" name="id" value="<%=author._id%>">
                        <button id="editbtn" type="submit" class = "btn btn-success btn-sm" style="float: right;">Edit Author</button>
                        </form>
      
                        <form action="/authors/delete" method="POST">
                        <input type="hidden" name="id" value="<%=author._id%>">
                        <button id="dltbtn" type="submit" class = "btn btn-danger btn-sm" style="float: right; margin-right: 25px">Delete Author</button>
                        </form>
                        <%} else { %>

                          <form action="/authors/edit" method="POST" class="hidden">
                            <input type="hidden" name="id" value="<%=author._id%>">
                            <button id="editbtn" type="submit" class = "btn btn-success btn-sm" style="float: right;">Edit Author</button>
                            </form>
          
                            <form action="/authors/delete" method="POST" class="hidden">
                            <input type="hidden" name="id" value="<%=author._id%>">
                            <button id="dltbtn" type="submit" class = "btn btn-danger btn-sm" style="float: right; margin-right: 25px">Delete Author</button>
                            </form>
                          <% } %>
              
                  </div>
              
                  </div>
                  <!-- Card 1 2 3 -->



  
  
          </div>
          <!-- Card deck1 end -->
          
      
        </div>
      </div>
                                                                                       
	                                                
                                                      
   	</div><!--/col-12-->
  </div>
</div>
                                                
                                                                                
